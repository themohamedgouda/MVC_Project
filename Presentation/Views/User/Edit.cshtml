@model UsersViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit User</h1>
    <form method="post" asp-controller="User" asp-action="Edit" class="col-8">
        <div asp-validation-summary=" ModelOnly"></div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="FName"></label>
            <input asp-for="FName" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LName"></label>
            <input asp-for="LName" class="form-control" readonly />
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
@section ValidationScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}