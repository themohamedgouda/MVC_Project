@using Presentation.ViewModels.ForgetPasswordViewModel
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SendResetPasswordSMS" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email"></span>
            <br />
            <input type="submit" value="Send Reset Password Link">
        </form>
        <p> <a asp-action="Login">Cancel</a></p>
    </div>
</div>
