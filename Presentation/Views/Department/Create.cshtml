@model DepartmentViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>

    <form  class="col-8" method="post" asp-controller="Department" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <partial name="PartialViews/CreateEditPartialView" />
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-outline-dark" asp-controller="Department" asp-action="Create">Back to list</a>
        </div>
    </form>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

@section  ValidationScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}