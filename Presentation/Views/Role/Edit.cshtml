@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Role</h1>
    <form method="post" asp-controller="Role" asp-action="Edit" class="col-8">
        <div asp-validation-summary=" ModelOnly"></div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control"  />
        </div>
        <h3>Assign User To Roles</h3>
        <div class="form-group">
            @for(int i = 0; i < Model.Users.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="Users[i].Id">
                    <input type="hidden" asp-for="Users[i].UserName">
                    <input asp-for="Users[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label">@Model.Users[i].UserName</label>
                </div>
            }

        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
@section ValidationScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}